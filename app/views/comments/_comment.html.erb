<% show_post ||= false %>

<div class="row">
  <div class="span0 well text-center">
    <%= link_to post_comment_vote_path(comment.post, comment, vote: true), method: 'post' do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br />
    <%= comment.total_votes %> votes
    <br />
    <%= link_to post_comment_vote_path(comment.post, comment, vote: false), method: 'post' do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>

  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
     on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <span class="quiet">posted by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
    <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>